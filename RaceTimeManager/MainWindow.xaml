        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Window.DataContext>
        <viewModels:MainViewModel x:Name="viewModel"/>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding ViewModel}"/>
    </Grid>
</Window>
